<html>
<head>
    <meta charset="UTF-8">
</head>
<body>
<form method="POST">
    Новая задача: <input name="newTask">
    <input type="submit" value="Добавить">
</form>
<ol>
  #foreach( ${task} in ${allTasks} )
    <li>${task.text}
<form method="POST">
    <input type="hidden" name="id" value="${task.id}">
    <input type="submit" value="Завершено">
    </li>
</form>
  #end
</ol>
</body>
</html>
